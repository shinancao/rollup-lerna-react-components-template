{
  "compilerOptions": {
    "rootDir": "packages",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/**/lib"
  ]
}
